{
  "name": "service-typescript",
  "description": "",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "gcp-build": "tsc",
    "start:dev": "concurrently -k \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "build": "rimraf ./dist && tsc",
    "watch": "nodemon -q --ignore '**/*.spec.ts' src/index.ts",
    "lint": "eslint . --ext .ts",
    "prettier:check": "prettier --check '**/*.{js,ts}'",
    "fix": "eslint . --ext .ts --fix && prettier --write '**/*.{js,ts}'",
    "test": "jest --detectOpenHandles --clearMocks --colors --config jest.config.cjs --ci --ci --reporters=default --reporters=jest-junit --coverage",
    "test:watch": "jest --watch --clearMocks --detectOpenHandles --colors --config jest.config.cjs",
    "connector:post-deploy": "node build/connector/post-deploy.js",
    "connector:pre-undeploy": "node build/connector/pre-undeploy.js"
  },
  "author": "Shopmacher GmbH",
  "license": "MIT",
  "keywords": [
    "commercetools",
    "easycredit",
    "shopmacher",
    "payment",
    "payment integration",
    "payment provider"
  ],
  "engines": {
    "node": ">=18.0.0 <=20.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node-fetch": "^2.6.11",
    "@types/validator": "^13.12.0",
    "@tsconfig/recommended": "^1.0.7",
    "@types/node": "^18.19.39",
    "@typescript-eslint/eslint-plugin": "7.13.1",
    "@typescript-eslint/parser": "7.13.1",
    "concurrently": "^8.2.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unused-imports": "3.2.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.4",
    "npm-force-resolutions": "^0.0.10",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@commercetools-backend/loggers": "^21.19.0",
    "@commercetools/platform-sdk": "^4.0.0",
    "@commercetools/sdk-client-v2": "^2.0.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "validator": "^13.11.0"
  }
